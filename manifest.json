{
  "manifest_version": 3,
  "name": "No Redirect (Detect Automatic)",
  "version": "1.0.0",
  "description": "Bloqueia redirects indesejados automaticamente. Detecta e impede qualquer tipo de redirect — rede, JavaScript, meta refresh e popups.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "webNavigation",
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "No Redirect — Proteção contra redirects"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "redirect_blocker_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
